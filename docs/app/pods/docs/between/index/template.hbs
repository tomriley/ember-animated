{{! BEGIN-SNIPPET index-snippet.hbs }}
{{#animated-value "index-route" initialInsertion=true finalRemoval=true use=this.transition duration=1000}}
  <div class="hero-list">
    {{#each this.model as |person|}}
      <LinkTo @route="docs.between.detail" @model={{person.id}}>
        <AnimatedContainer>
          {{#animated-value person duration=1000 as |p|}}
            <div class="hero-list-image">
              <img src={{p.avatarUrl}} alt={{person.name}}>
              <span>Thumbnail</span>
            </div>
          {{/animated-value}}
        </AnimatedContainer>
        <p>{{person.name}}</p>
      </LinkTo>
    {{/each}}
  </div>
{{/animated-value}}
{{! END-SNIPPET }}
